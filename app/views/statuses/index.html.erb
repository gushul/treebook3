<br><br><br><br>
<div class="page-header">
  <h1>All Statuses</h1>
  <%= link_to "Add Friend", new_user_friendship_path(friend_id: @user), class: 'btn primary' %>
  <%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>
</div>



<% @statuses.each do |status| %>
<div class="status">
  <div class="row">
    <div class="span1">
      <%= image_tag status.user.gravatar_url %>
    </div>
    <div class="span7">
    <p><%= status.user.first_name %></p>
    <%= link_to "Add Friend", new_user_friendship_path(friend_id: status.user.id), class: 'btn primary' %>
    <p><%= status.content %></p>
    <% if status.document && status.document.attachment? %>
      <p>
        This is an example
        <%= link_to status.document.attachment_file_name, status.document.attachment.url %>
      </p>
    <% end %>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin">
        | <%= link_to "Edit", edit_status_path(status) %>
        <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?" } %> 
      </span>
    </div> <!--end meta -->
  </div> <!--end span 7 -->
</div> <!--end row -->
</div> <!--end status -->

  <% end %>